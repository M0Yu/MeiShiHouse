<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- white dialog -->
    <style name="WhiteDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/dialog_white_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="first_activity_fragemnt_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/firstpageradiobuttoncolor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/tab_text_indicator</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="layoutstyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#F9F9F9</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="imagestyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="textstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="arror_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:padding">15dp</item>
        <item name="android:src">@drawable/arrow_right</item>
    </style>

</resources>